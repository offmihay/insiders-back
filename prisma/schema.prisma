generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  TO_DO
  IN_PROGRESS
  DONE
}

model Task {
  id          String @id @unique
  name        String
  description String
  status      Status

  @@map("tasks")
}

model User {
  id           String @id @unique
  email        String @unique
  passwordHash String @map("password_hash")

  @@map("users")
}
